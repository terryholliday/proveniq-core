APP_NAME="PROVENIQ Core"
DEBUG=false
PORT=8000

DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/proveniq_core"

FIREBASE_PROJECT_ID="your-firebase-project-id"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

STORAGE_PROVIDER="gcs"
GCS_BUCKET_NAME="proveniq-core-assets"
GCS_PROJECT_ID="your-gcp-project-id"

AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="proveniq-core-assets"

PRESIGN_TTL_SECONDS=300
MAX_UPLOAD_SIZE_MB=50

CLOUD_MCT_BASE_URL="https://api.cloudmct.example.com"
CLOUD_MCT_API_KEY="cloud-mct-api-key"
CLOUD_MCT_PROJECT_ID="cloud-mct-project-id"
CLOUD_MCT_TIMEOUT_SECONDS=30
CLOUD_MCT_VERIFY_SSL=true
